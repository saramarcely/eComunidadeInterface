<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:eComunidade.ViewModels"
             xmlns:models="clr-namespace:eComunidade.Models"
             xmlns:enums="clr-namespace:eComunidade.Models.Enum"
             xmlns:converters="clr-namespace:eComunidade.Converters"
             x:Class="eComunidade.Views.TelaOcorrencias"
             Title="Ocorrências"
             BackgroundColor="#EBF5FF">

    <ContentPage.Resources>
        <converters:TipoToColorConverter x:Key="TipoToColorConverter" />
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:OcorrenciasViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, Auto, *, 60"
          ColumnDefinitions="*"
          RowSpacing="0"
          ColumnSpacing="0"
          x:Name="PageGrid">

        <Grid Grid.Row="0" ColumnDefinitions="*, Auto" Margin="20,15,20,0">
            <Label Grid.Column="0" Text="Ocorrências" FontSize="28" FontAttributes="Bold" TextColor="#226487" VerticalOptions="Center" HorizontalOptions="Start" />
            <HorizontalStackLayout Grid.Column="1" HorizontalOptions="End" Spacing="10">
                <Image Source="profile.png" HeightRequest="45" WidthRequest="45" Aspect="AspectFit" HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="menu.png" HeightRequest="30" WidthRequest="30" Aspect="AspectFit" HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleMenuCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </HorizontalStackLayout>
        </Grid>

        <ScrollView Grid.Row="2" VerticalScrollBarVisibility="Always">
            <VerticalStackLayout Spacing="20" Padding="0,0,0,10">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Destaques" FontSize="20" FontAttributes="Bold" TextColor="#333333" Margin="20,0,0,0" />
                    <CollectionView ItemsSource="{Binding Destaques}" HeightRequest="150" Margin="20,0,0,0">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="15" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="{x:Type models:Ocorrencia}">
                                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" StrokeThickness="0" Padding="15" WidthRequest="250">
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.1" />
                                    </Border.Shadow>
                                    <Grid RowDefinitions="Auto, Auto, *, Auto" RowSpacing="5">
                                        <Label Grid.Row="0" Text="{Binding Descricao}" FontSize="14" TextColor="#333333" LineBreakMode="WordWrap" MaxLines="3" />

                                        <Label Grid.Row="1" Text="{Binding Data, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="11" TextColor="#666666" />

                                        <Grid Grid.Row="2" ColumnDefinitions="Auto, *">
                                            <Ellipse Grid.Column="0" Fill="{Binding Tipo, Converter={StaticResource TipoToColorConverter}}" 
                                                     HeightRequest="8" WidthRequest="8" VerticalOptions="Center" HorizontalOptions="Start"/>

                                            <Button Grid.Column="1" Text="Comentar"
                                                    BackgroundColor="#66A5ED"
                                                    TextColor="White"
                                                    FontSize="11"
                                                    CornerRadius="15"
                                                    Padding="8,4"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Center"
                                                    Command="{Binding Source={x:Reference PageGrid}, Path=BindingContext.ComentarOcorrenciaCommand}"
                                                    CommandParameter="{Binding .}" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Mais recentes" FontSize="20" FontAttributes="Bold" TextColor="#333333" Margin="20,0,0,0" />
                    <CollectionView ItemsSource="{Binding Recentes}" Margin="20,0,20,0">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="15" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="{x:Type models:Ocorrencia}">
                                <Border BackgroundColor="White" StrokeShape="RoundRectangle 15" StrokeThickness="0" Padding="15">
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Offset="5,5" Radius="10" Opacity="0.1" />
                                    </Border.Shadow>
                                    <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto, Auto" RowSpacing="5">
                                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Descricao}" FontSize="14" TextColor="#333333" LineBreakMode="WordWrap" />
                                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Data, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="#666666" />

                                        <Ellipse Grid.Row="2" Grid.Column="0" HeightRequest="8" WidthRequest="8"
                                                 Fill="{Binding Tipo, Converter={StaticResource TipoToColorConverter}}" 
                                                 HorizontalOptions="Start" VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Border Grid.Row="3" BackgroundColor="White" StrokeShape="RoundRectangle 20,20,0,0"
                StrokeThickness="0" VerticalOptions="EndAndExpand" Padding="0,5,0,5">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,-5" Radius="10" Opacity="0.2" />
            </Border.Shadow>
            <Grid ColumnDefinitions="*,*,*" HorizontalOptions="FillAndExpand">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" Spacing="2">
                    <Image Source="home.png" HeightRequest="25" WidthRequest="25" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Text="Início" FontSize="10" TextColor="#226487" HorizontalOptions="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToHomeCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" Spacing="2">
                    <Image Source="add.png" HeightRequest="25" WidthRequest="25" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Text="Adicionar" FontSize="10" TextColor="#226487" HorizontalOptions="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAddCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" Spacing="2">
                    <Image Source="heart.png" HeightRequest="25" WidthRequest="25" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Text="Favoritos" FontSize="10" TextColor="#226487" HorizontalOptions="Center" />
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToFavoritesCommand}" />
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>